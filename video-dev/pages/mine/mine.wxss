page {
    font-size: 14px;
}

.container {
    background-color: whitesmoke;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header {
  display: block;
  margin-top: 20rpx;
}

.index {
  width: 60rpx;
  height: 60rpx; 
  margin-right: 520rpx;
}

.container-row {
    display: flex;
    flex-direction: row;
    margin-bottom: 10px;
    margin-top: 10px;
}

.info-items {
    margin-right: 25rpx;
}

.face {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    margin-top: 20rpx;
}

.nickname {
  display: flex;
  flex-direction: row;
  margin-top: 5px;
  font-weight: bold;
  font-size: 18px;
  align-items: center;
}

.nickLabel {
  margin-left: 2rpx;
}

.uploadbtn {
  margin-top: 10rpx;
  margin-bottom: 2rpx;
  width: 90%;
}

.image {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.iconImage {
  width: 50rpx;
  height: 50rpx; 
}

.iconLabel {
  margin-right: 30rpx;
}

.follow {
    margin-top: 20rpx;
}

.line {
    width: 100%;
    height: 1px;
    background-color: gainsboro;
    margin-top: 1px;
}

.container-video {
    display: flex;
    flex-direction: row;
    margin-top: 10px;
    text-align: center;
    border: solid 1px;
    line-height: 30px;
}

.video-info {
    width: 100%;
}

.video-info-selected {
    background-color: gainsboro;
}

.container-video-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.videoImage {
    width: 250rpx;
    height: 180px;
}
